---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Limitless Customization",
    description:
      "Choose themes, fonts, colors, layouts. Add custom CSS. Make your page uniquely yours.",
    icon: "mdi:handshake",
  },
  {
    title: "More Than Just Links",
    description:
      "Embed images, videos, contact forms, maps, music, and more. Build exactly what you need.",
    icon: "mdi:feather",
  },
  {
    title: "Perfect for Everyone",
    description:
      "Ideal for creators' link in bio , professionals' digital cards/resumes, business mini-sites, resource hubs, and more.",
    icon: "mdi:directions-fork",
  },
  {
    title: "SEO Optimized Pages",
    description:
      "Customize page titles and descriptions to help your audience find you on search engines.",
    icon: "mdi:graph",
  },
  {
    title: "Insightful Analytics",
    description:
      "Track page views and link clicks to understand your audience engagement. ",
    icon: "mdi:search-web",
  },
  {
    title: "Custom Domain Support",
    description:
      "Use your own domain name for your EgoLinks page. ",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Why Choose  <span class="text-primary">EgoLinks?</span>?
    EgoLinks empowers you to build highly customizable link pages, digital cards, resumes, portfolios, and more â€“ all in one place. 
    <span class="text-primary">Free and easy to start. </span>
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
